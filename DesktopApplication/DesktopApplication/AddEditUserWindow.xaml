<Window x:Class="UserManagementApp.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit User" Height="300" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="0 0 0 10"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="1" Grid.Column="1" Margin="0 0 0 10"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Password:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Margin="0 0 0 10"/>

        <Button Grid.Row="3" Content="Save" Click="SaveButton_Click" Width="80" HorizontalAlignment="Center" Grid.ColumnSpan="2" Height="30"/>
    </Grid>
</Window>